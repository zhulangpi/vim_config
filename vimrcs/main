" =============================================================================
"                          << 以下为软件默认配置 >>
" =============================================================================

" -----------------------------------------------------------------------------
"  每移动15次键盘就设置一次undolevel 用来workaround undolevels总是变成-1的问题
"  let &l:undolevels=g:move_count2
" -----------------------------------------------------------------------------
let g:move_count = 0

function! SetUndoLevels()
    let g:move_count=g:move_count+1
    if g:move_count % 15 == 0
        set undolevels=700000
    endif
endfunction
autocmd CursorMoved * call SetUndoLevels()
autocmd CursorMovedI * call SetUndoLevels()

"
" -----------------------------------------------------------------------------
"  < Linux Gvim/Vim 默认配置> 做了一点修改
" -----------------------------------------------------------------------------
" Uncomment the following to have Vim jump to the last position when
" reopening a file
if has("autocmd")
    au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif

" This line should not be removed as it ensures that various options are
" properly set to work with the Vim-related packages available in Debian.
runtime! debian.vim

" Vim5 and later versions support syntax highlighting. Uncommenting the next
" line enables syntax highlighting by default.
if has("syntax")
    syntax on
endif

set mouse=v                    " 启用鼠标
set t_Co=256                   " 在终端启用256色
set backspace=2                " 设置退格键可用

" Source a global configuration file if available
if filereadable("/etc/vim/vimrc.local")
    source /etc/vim/vimrc.local
endif

set undofile
set undodir=$HOME/.vim/undo
set undolevels=10000000
set undoreload=10000000

" =============================================================================
"                          << 以下为用户自定义配置 >>
" =============================================================================

" -----------------------------------------------------------------------------
"  < 编码配置 >
" -----------------------------------------------------------------------------
" 注：使用utf-8格式后，软件与程序源码、文件路径不能有中文，否则报错
set encoding=utf-8                                    "设置gvim内部编码
set fileencoding=utf-8                                "设置当前文件编码
set fileencodings=ucs-bom,utf-8,gbk,cp936,latin-1     "设置支持打开的文件的编码

" 文件格式，默认 ffs=dos,unix
set fileformat=unix                                   "设置新文件的<EOL>格式
set fileformats=unix,dos,mac                          "给出文件的<EOL>格式类型

" -----------------------------------------------------------------------------
"  < 编写文件时的配置 >
" -----------------------------------------------------------------------------
filetype on                                           "启用文件类型侦测
filetype plugin on                                    "针对不同的文件类型加载对应的插件
filetype plugin indent on                             "启用缩进
set smartindent                                       "启用智能对齐方式
set smarttab                                          "指定按一次backspace就删除shiftwidth宽度的空格
set wrap                                              "自动换行
set so=15                                              "翻页留5行

set noexpandtab                                       "将Tab键转换为空格
set tabstop=8                                         "设置Tab键的宽度
set shiftwidth=8                                      "换行时自动缩进4个空格

nmap t8 :set noexpandtab<CR>:set tabstop=8<CR>:set shiftwidth=8<CR>
nmap t4 :set expandtab<CR>:set tabstop=4<CR>:set shiftwidth=4<CR>

" 判断当前是否linux目录来配置tab格式
"if (expand('%') == "" && fnamemodify("Makefile",":p") =~ "linux") || expand('%') =~ "linux"
"	set tabstop=8                                         "设置Tab键的宽度
"	set shiftwidth=8                                      "换行时自动缩进4个空格
"else
"	set expandtab                                         "将Tab键转换为空格
"	set tabstop=4                                         "设置Tab键的宽度
"	set shiftwidth=4                                      "换行时自动缩进4个空格
"endif

" 用空格键来开关折叠
nnoremap <space> @=((foldclosed(line('.')) < 0) ? 'zc' : 'zo')<CR>
nnoremap <leader>ls :ls<cr>:b<space>
nnoremap <leader>vls :copen<CR>
nnoremap <leader>p :vimgrep /<C-R>=expand("<cword>")<CR>/g **<CR>:copen<CR>
nmap smv :set mouse=v<CR>
nmap sma :set mouse=a<CR>
nmap 9 $
nmap f g*
vnoremap ff y/<C-R>"<CR>"
nmap zh :nohlsearch<CR>
nmap <c-n> :bp<CR>
nmap <c-N> :bn<CR>
nmap <c-g> :cs find g 
nmap u :undo<CR>:set undolevels=1000000<CR>

nnoremap <leader>on :set smartindent<CR>
nnoremap <leader>off :set nosmartindent<CR>

" 当文件在外部被修改，自动更新该文件
set autoread

" 常规模式下输入 cls 清除行尾空格
nmap cls :%s/\s*$//g<CR>:noh<CR>

" 常规模式下输入 clm 清除行尾 ^M 符号
nmap clm :%s/\r$//g<CR>:noh<CR>

" 设置:w!为使用超级用户权限保存
cmap w!<CR> w !sudo tee > /dev/null %<CR>

" 防止没有松开shift导致麻烦
"cmap Q q
"cmap W w
"cnoremap qq Q
"cnoremap ww W

set hlsearch                                          "高亮搜索
set incsearch                                         "在输入要搜索的文字时，实时匹配
set ignorecase                                        "搜索模式里忽略大小写
set smartcase                                         "如果搜索模式包含大写字符，不使用 'ignorecase' 选项，只有在输入搜索模式并且打开 'ignorecase' 选项时才会使用

" 插入模式下光标移动
imap <c-k> <Up>
imap <c-j> <Down>
imap <c-h> <Left>
imap <c-l> <Right>

imap smv:set mouse=v<CR>
imap sma:set mouse=a<CR>

" 长行浏览
map j gj
map k gk

" 启用每行超过80列的字符提示（字体变蓝并加下划线），不启用就注释掉
" au BufWinEnter * let w:m2=matchadd('Underlined', '\%>' . 80 . 'v.\+', -1)

" -----------------------------------------------------------------------------
"  < 界面配置 >
" -----------------------------------------------------------------------------
set number                                            "显示行号
set laststatus=2                                      "启用状态栏信息
set cmdheight=2                                       "设置命令行的高度为2，默认为1
""set bg=dark
set cursorline                                        "突出显示当前行
set cursorcolumn

colorscheme Tomorrow-Night-Eighties                   "终端配色方案
hi Normal ctermbg=none
""highlight CursorLine cterm=none ctermbg=20
""highlight CursorColumn cterm=none ctermbg=6

" -----------------------------------------------------------------------------
"  < 代码文本配置 >
" -----------------------------------------------------------------------------

"新建.c,.h,.sh文件，自动插入文件头
autocmd BufNewFile *.cpp,*.[ch] exec ":call HeaderC()"
autocmd BufNewFile *.sh exec ":call HeaderShell()"
autocmd Bufnewfile *.py exec ":call HeaderPython()"

func HeaderC()
    call setline(1, "/*************************************************************************")
    call setline(2, " > File Name: ".expand("%"))
    call setline(3, " > Created Time: ".strftime("%c"))
    call setline(4, "************************************************************************/")
    call setline(5, "")

    if &filetype == 'cpp'
    call setline(6, "#include <iostream>")
    call setline(7, "using namespace std;")
    call setline(8, "")
    endif
    if &filetype == 'c'
    call setline(6, "#include <stdio.h>")
    call setline(7, "")
    endif
    normal G
endfunc

func HeaderShell()
    call setline(1,"#########################################################################")
    call setline(2, "# File Name: ".expand("%"))
    call setline(3, "# Created Time: ".strftime("%c"))
    call setline(4,"#########################################################################")
    call setline(5, "#!/bin/bash")
    call setline(6, "")
    normal G
endfunc

func HeaderPython()
    call setline(1, "#! /usr/bin/env python")
    call setline(2, "#-*- coding: utf8 -*-")
    call setline(3, "")
    call setline(4, "'''")
    call setline(5, " > File Name: ".expand("%"))
    call setline(6, " > Created Time: ".strftime("%c"))
    call setline(7, "'''")
    call setline(8, "")
    call setline(9, "")
    normal G
endfunc

